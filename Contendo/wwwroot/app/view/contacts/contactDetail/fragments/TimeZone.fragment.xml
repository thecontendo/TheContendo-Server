<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <SelectDialog
            contentHeight="auto"
            contentWidth="25rem"
            title="{i18n>timeZones}"
            items="{mainModel>/dictionaries/timeZones}"
            search="_handleValueHelpSearch"
            confirm="_handleTimeValueHelpClose"
            cancel="_handleTimeValueHelpClose"
            multiSelect="false">
        <StandardListItem
                iconDensityAware="false"
                iconInset="false"
                title="{mainModel>key}"
                description="{mainModel>value}" />
    </SelectDialog>
</core:FragmentDefinition>