<mvc:View
        controllerName="vcs.controller.Home"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:u="sap.uxap"
        xmlns="sap.m"
        xmlns:f="sap.f"
        height="100%"
        displayBlock="true">
    <u:ObjectPageLayout upperCaseAnchorBar="false" showHeaderContent="false">
        <u:sections>
            <u:ObjectPageSection titleUppercase="false" title="{i18n>general}">
                <u:subSections>
                    <u:ObjectPageSubSection title="{i18n>general}" titleUppercase="false">
                        <u:blocks>
                            <f:GridContainer>
                                <f:layout>
                                    <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px"/>
                                </f:layout>
                                <f:layoutXS>
                                    <f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px"/>
                                </f:layoutXS>

                                <GenericTile
                                        header="Challenges"
                                        subheader=""
                                        press="challengePressed">
                                    <layoutData>
                                        <f:GridContainerItemLayoutData minRows="2" columns="2"/>
                                    </layoutData>
                                    <TileContent>
                                        <ImageContent src="sap-icon://physical-activity"/>
                                    </TileContent>
                                </GenericTile>

                                <GenericTile
                                        header="Contacts"
                                        subheader=""
                                        press="contactsPressed">
                                    <layoutData>
                                        <f:GridContainerItemLayoutData minRows="2" columns="2"/>
                                    </layoutData>
                                    <TileContent>
                                        <ImageContent src="sap-icon://employee"/>
                                    </TileContent>
                                </GenericTile>
                            </f:GridContainer>
                        </u:blocks>
                    </u:ObjectPageSubSection>
                </u:subSections>
            </u:ObjectPageSection>
        </u:sections>
    </u:ObjectPageLayout>
</mvc:View>
